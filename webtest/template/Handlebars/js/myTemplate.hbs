{{#each pets}}
  <div class="pet">
    <div class="photo-column">
      <img src="{{photo}}">

      
          <button onclick="playVideo()" type="button">video</button>
          <button onclick="pauseVideo()" type="button">Pause</button><br> 
          <video src="{{photo}}" type="video/mp4" width="400" height="200">
          </video>
          <script> 
          //var myVideo = document.getElementById("myVid");
          function playVideo() { 
          myVideo.play(); 
          } 
          function pauseVideo() { 
          myVideo.pause(); 
          } 
          </script> 

      
    </div>

    <div class="info-column">
      <h2>{{name}} <span class="species">({{species}})</span></h2>

      <p>Age: {{calculateAge birthYear}}</p>

      {{#if favFoods}}
      <h4 class="headline-bar">Favorite Foods</h4>
      <ul class="favorite-foods">
        {{#each favFoods}}
          <li>{{{this}}}</li>
        {{/each}}
      </ul>
      {{/if}}

    </div>
  </div>
{{/each}}